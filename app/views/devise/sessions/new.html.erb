<div class="ls-login-parent">
  <div class="ls-login-inner">
    <div class="ls-login-container">
      <div class="ls-login-box">
        <h1 class="ls-login-logo"><img title="Logo login" src="app/assets/images/locastyle/logo-locaweb.png" /></h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "ls-form ls-login-form") do |f| %>
        <fieldset>

          <label class="ls-label">
            <%= f.label :email %>
            <div class="ls-prefix-group ls-field-lg">
              <a class="ls-label-text-prefix ls-toggle-pass ls-ico-user" data-target="#email_field" href="#"></a>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "ls-login-bg-user ls-field-lg" %>
            </div>
          </label>


          <label class="ls-label">
            <%= f.label :password %>
            <div class="ls-prefix-group ls-field-lg">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Senha", id: "password_field", class: "ls-login-bg-password" %>
              <a class="ls-label-text-prefix ls-toggle-pass ls-ico-eye" data-toggle-class="ls-ico-eye, ls-ico-eye-blocked" data-target="#password_field" href="#"></a>
            </div>
          </label>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <p class="ls-login-forgot">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </p>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit t('buttons.log_in'), class: "ls-btn-primary ls-btn-block ls-btn-lg"%>
          </div>
          <% end %>
        </fieldset>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
