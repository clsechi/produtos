<div class="ls-form row">
  <%= form_for @category do |f| %>
    <div class="ls-label">
      <%= f.label :name, 'Nome', class: 'ls-label-text' %>
      <%= f.text_field :name %>
    </div>
    <div class="ls-label">
      <%= f.label :description, 'Descrição', class: 'ls-label-text' %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.submit 'Enviar', class: 'ls-btn-primary ls-float-right' %>
    </div>
  <% end %>
</div>