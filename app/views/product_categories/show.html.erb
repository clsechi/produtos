<div class="container-fluid">
  <h1 class="ls-title-intro ls-ico-bukets">Categorias</h1>

  <%= link_to ' Voltar', product_categories_path, class: 'ls-ico-chevron-left ls-btn-primary' %>
  <%= link_to ' Editar', edit_product_category_path(@category.id), class: 'ls-ico-pencil2 ls-btn-primary' %>
  <%= link_to ' Cadastrar Produto', new_product_category_product_path(@category.id), class: 'ls-ico-plus ls-btn-primary' %>

  <div class="ls-box ls-board-box description">
    <div class="description">
      <p class="title">Nome:</p>
      <p><%= @category.name %></p>

      <p class="padd title">Descrição:</p>
      <p><%= @category.description %></p>
    </div>
    <hr>
    <h3 class="padd">Produtos dessa categoria:</h3>
    <% if @category.products.any? %>
    <table class="ls-table">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Status</th>
          <th>Descrição</th>
        </tr>
      </thead>
      <tbody>
        <% @category.products.each do |product| %>
        <tr>
          <td><%= link_to product.name, product_path(product) %></td>
          <td><%= product.actual_status %></td>
          <td><%= product.description %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
    <p class="padd">Nenhum produto cadastrado</p>
    <% end %>
  </div>
</div>
